<!-- BOILERPLATE THAT WILL ACT AS A TEMPLATE FOR EJS PAGES -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YelpCamp</title>
    <link crossorigin="anonymous" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

    <script crossorigin="anonymous" src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js'></script>
    <link crossorigin="anonymous" href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet'/>

    <link rel="stylesheet" href="/stylesheets/app.css">
</head>

<!-- flex display to have body take up the entire screen -->

<body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>
    <!-- created a container with a margin on top of 5 -->
    <main class="container mt-5">
        <%- include('../partials/flash') %>
        <!-- ejs success -->
        <!-- if successfully created a new campground, a local variable named 'success' was created and will show with flash here -->
        <!-- BODY OF EVERY EJS FILE WILL BE PASSED IN HERE AS BODY -->
        <%- body %>
    </main>
    <%- include('../partials/footer') %>

    <script crossorigin="anonymous" src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js
    "></script>

    <script crossorigin="anonymous" src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>

    <!-- client side validator for edit and new form -->
    <script src="/javascripts/validateForm.js"></script>

    <script src="/javascripts/displayImages.js"></script>

</body>

</html>